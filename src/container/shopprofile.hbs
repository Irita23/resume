    {{#with middleName}}
<p>{{title}}</p>
<p>{{value}}</p>
    {{/with}}
</div>
      {{/with}}  
    </div>
</div>


<div class="card mt-2">
    <div class="row">
        {{#with otherInfo}}

{{#with birthday}}
<div class="col-4 p-3">
    <p>{{title}}</p>
    <p>{{value}}</p>
</div>
{{/with}}

