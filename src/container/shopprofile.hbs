<hr class="mt-3">
<footer>

<div class="nav">
            {{#each footer}}
            <div class="nav-item col-2">
                {{#each this}}
                <a class="nav-link {{#if @last}} disabled {{/if}}" 
                href={{url}}>{{text}}</a>
{{/each}}
            </div>
{{/each}}
        </div>

</footer>


</main>