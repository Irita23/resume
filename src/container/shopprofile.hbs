{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main class='m-5'>
    <div class='row'>
        <div class='card'>

            {{#with navigation}}
            <ul class="nav">
                {{#each links}}
                <li class="nav-item col-2">
                    <a href="#" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </li>
                {{/each}}
            </ul>
            {{/with}}
        </div>
    </div>
    <h1 class="m-5 ms-1">
        {{header}}
    </h1>
    <div class="row">
        {{#with purchase}}
        <ul class="nav nav-tabs">
            {{#each tabs}}
            <li class="nav-item">
                <a class="nav-link {{#if @first}}active{{/if}}" href="#">{{this}}</a>
            </li>
            {{/each}}
        </ul>

        {{#with actionBlock}}
        <div class="row">
            {{#with input}}
            <div class=" col-4 mt-3">
                <input class="form-control" placeholder={{placeholder}}>
            </div>
            {{/with}}
            <div class="col-8">
                {{#each buttons}}
                <button type="button" href="#" class="btn
       {{#if isSuccess}}btn-success{{/if}}
       {{#if isOutline}}btn-outline-success{{/if}}
       {{#if isDanger}}btn-outline-danger{{/if}} mt-3 ">{{text}}</button>

                {{/each}}
            </div>
        </div>
        {{/with}}

        <hr class="m-3">
        {{#each itemList}}

        <div class="row">
            <div class="col-4">
                <p class="pt-2">{{number}}</p>
                <p class="pt-1 ">{{status}}</p>
            </div>
            <div class="col-2">
                {{#with amount}}
                <p class="pt-2">{{title}}</p>
                <p class="pt-1">{{value}}</p>
                {{/with}}
            </div>
            <div class="col-4">
                <div class="row">
                    {{#each images}}
                    <div class="col-4">
                        <img class="card-img-top m-2 " src="https://picsum.photos/110/100">
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-2">
                {{#with button}}
                <button type="button" class="btn
{{#if isPrimary}}btn-primary{{/if}} mt-3" href="#">{{text}}</a>
                    {{/with}}
            </div>
        </div>
        <hr class="m-3">
        {{/each}}
        {{/with}}
    </div>


    <hr class="m-3">
    {{#with userInfo}}
    <h3 class="m-5 ms-1">{{title}}</h3>
    <div class="row">
        <div class="card">
{{#with profileData}}
<h4 class="col=mt-3 mb-3">{{title}}</h4>


<div class="card">
        <div class="row">
      {{#with fullName}}
      {{#with surname}}
<div class="col-4 p-3">
    <p >{{title}}</p>
<p >{{value}}</p>
    </div>
