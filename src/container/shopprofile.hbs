<div class="col-4  p-3 g-2">
    <button type="button" href="#" class="btn {{#if isPrimary}}btn-primary{{/if}}
    {{#if isSecondary}}btn-outline-secondary{{/if}}
    {{#if isDanger}}btn-outline-danger{{/if}}">
    {{text}}</button>
</div>
{{/each}}
</div> 
