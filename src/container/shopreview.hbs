{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}<main class='m-5'>
    <div class='row'>
        <div class='card'>

            {{#with navigation}}
            <ul class="nav">
                {{#each links}}
                <li class="nav-item col-2">
                    <a href="#" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </li>
                {{/each}}
            </ul>
            {{/with}}
        </div>
    </div>

    <div class="row">
        {{#with formBlock}}
        <div class="col-8">
            <h1 class="mt-5">{{header}}</h1>

            {{#with rating}}

            <p>
                {{title}}{{value}}
            </p>
        </div>
        {{/with}}

        <div class="col-8">
            {{#with actionBlock}}
            <ul class="nav nav-tabs">
                {{#each tabs}}
                <li class="nav-item">
                    <a href="#" class="nav-link {{#if isActive}}active{{/if}}">{{text}}</a>
                </li>
                {{/each}}
            </ul>
            <hr class="mb-5">
            <div class="card">
                {{#with report}}
                <div class="card-body">
                    <div class="card-title">
                        {{title}}
                    </div>
                    {{#with button}}
                    <button type="button" class="btn btn-secondary">{{text}}</button>
                    {{/with}}
                </div>
                {{/with}}
            </div>
            {{/with}}

            <hr class="m-5">

            {{#with feedbackBlock}}
            <h2 class="mt-5">{{title}}</h2>
            <div clas="row">
                {{#each buttons}}
                <button type="button" href="#" class="btn 
{{#if isWarning}}btn-warning{{/if}} 
{{#if isSuccess}}btn-success{{/if}}
{{#if isDanger}} btn-danger{{/if}} mt-5 ">{{text}}</button>
                {{/each}}
            </div>
            {{/with}}

        </div>


        <div class="col-4 pt-2">
            {{#with goodsInfo}}
            <div class="card p-3">

                <img src="https://picsum.photos/110/100">
                <p>{{name}}</p>
            </div>

            <div class="card mt-3">
                <p class="ps-3">{{price}}</p>
                <p class="ps-3">{{#if inMarket}}market{{/if}}</p>
                {{#each buttons}}
                <button type="button ms-3" href="#" class="btn col-7 ps-3 {{#if isPrimary}}btn-primary{{/if}} 
 {{#if isSecondary}}btn-secondary{{/if}} mb-3">{{text}}</button>
                {{/each}}
            </div>
            <div class="card mt-3">
                {{#with seller}}
                <div class="card-body">
                    <div class="card-title">

                        {{title}}{{value}}

                    </div>
                </div>
                {{/with}}
            </div>
            {{/with}}

        </div>

        {{/with}}
    </div>

    <hr class="mt-5">

    {{#each reviewList}}
    <div class="card px-2 mb-5">
        <div class="card mt-2 ms-2">
            <div class="row p-2">
                <div class="col-3">
                    <p class="o"><strong>{{title.userName}}</strong></p>
                    <p class="m-0">{{title.caption}}</p>

                </div>
                <div class="col"></div>
                <div class="col-2">
                    <p class="m-0">{{title.date}}</p>

                </div>
            </div>
            <hr class="col-12">

            <div class="p-2">
                {{#with reviewBody}}
                <p>{{seller.title}}: {{seller.value}}</p>
                <p>{{rating.title}}: {{rating.value}}</p>

                {{#each text}}
                <p> {{this}}</p>
                {{/each}}
                <p class="mb-2"><strong>{{advantages.title}}:</strong></p>
                <p>{{advantages.text}}</p>
                <p class="mt-2"><strong>{{disadvantages.title}}:</strong></p>
                <p>{{disadvantages.text}}</p>
                <div class="gx-2">
                    {{#each images}}
                    <img class="m-2" src="{{this}}" alt="photos">
                    {{/each}}
                </div>
            </div>
        </div>
        {{#each coments}}
        <div class="card m-4">
            <div class="card-body">
                <div class="row">
                    <p class="col-2"><strong>{{userName}}</strong></p>
                    <div class="col"></div>
                    <p>{{date}}</p>
                </div>
                <p>{{text}}</p>

            </div>
        </div>
        {{/each}}
        {{/with}}
    </div>
    {{/each}}

    {{#with service}}
    <div class="row ms-2">
        <div class="card  text-center text-bg-success">
            <div class="card-body">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <button type="button" class="btn btn-primary">{{text}}</button>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}
    </main>
    <hr class="m-5">

    <footer>
         <ul class="nav">
       {{#each footer}} 
<li class="nav-item col-2">
    {{#each this}}
    <a class="nav-link active {{#if @last}}disabled{{/if}} ms-4" href="#">{{text}}</a>
 
    {{/each}}
 </li>
       {{/each}}
       </ul>
    </footer>