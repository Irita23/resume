{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>
    <div class="row">
        <div class='card m-5'>
            {{#with navigation}}
            <ul class="nav">
                {{#each links}}
                <li class="nav-item">
                    <a class="nav-link active {{#if @last}}disabled{{/if}}" aria-current="page" href="#">{{text}}</a>
                </li>
                {{/each}}
            </ul>
            {{/with}}
        </div>
    </div>


    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-5">
            {{#each breadcrumb}}
            <li class="breadcrumb-item"><a href="#">{{name}}</a></li>
            {{#if @last}}<li class="breadcrumb-item active" aria-current="page">{{name}}</li>{{/if}}
            {{/each}}
        </ol>
    </nav>
    <header>
        <h1 class="m-5">{{header}}</h1>
    </header>


    <div class="row m-4">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select  " aria-label="Default select example">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row">

        {{#with filterBlock}}
        <div class="col-3">
            <div class="card ms-4">

                <div class="card-body">
                    {{#with sellers}}
                    <label class="form-label">{{title}} </label>
                    {{#each list}}
                    <div class="form-check">
                        <input class="form-check-input me-1" type="checkbox">
                        <label class="form-check-label ">{{value}}</label>
                    </div>
                    {{/each}}
                </div>
                {{/with}}

                <hr>

                {{#with brands}}
                <div class="col-8 m-2">
                    <label class="form-label ms-2 ">{{title}}</label>
                    {{#with input}}

                    <select class="form-select ">{{placeholder}}</select>
                    {{/with}}
                    {{#each options}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                </div>
                {{/with}}


                <hr>

                {{#with price}}
                <label class="form-label ms-3">{{title}}</label>

                {{#with range}}
                <div class="col-8 m-2">

                    <select class="form-select">
                        <option selected>{{from}}</option>
                    </select>

                    <select class="form-select mt-3">
                        <option selected>{{to}}</option>
                    </select>
                </div>

                {{/with}}

                {{#with button}}
                <button type="button" class="btn-outline-secondary col-3 m-3" link="{{url}}">{{text}}</button>
                {{/with}}
                {{/with}}

                <hr>
                {{#each filterList}}
                <p class="ps-3">{{title}}</p>
                {{#each options}}
                <div class="form-check ms-2">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">{{value}}</label>
                </div>
                {{/each}}
                <hr class="mb-2">
                {{/each}}


            </div>
            <div>
            </div>
            {{/with}}

        </div>

        <div class="col-9  row">
            {{#each goodsList}}
            <div class="col-6">

                <div class="card ">

                    <img class="card-img-top" src="https://picsum.photos/400/200">
                    <div class="card-body">

                        {{#if isHot}}
                        <span class="badge text-bg-warning roundet-pill">Hot</span>{{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-primary roundet-pill">New</span>{{/if}}

                        {{#if isFast}}
                        <span class="badge text-bg-primary roundet-pill">Fast</span>{{/if}}

                        {{#if isFree}}
                        <span class="badge text-bg-primary roundet-pill">Free</span>{{/if}}

                        <h6 class="m-2">{{name}}</h6>


                        {{#with review}}
                        <p class="ms-1">{{amount}} {{text}}</p>
                        {{/with}}

                        <p class="ms-1">{{price}}
                        <p class="ms-1">{{delivery}}</p>
                        </p>

                        <div class="col-6">
                            {{#each buttons}}

                            <button class="btn {{#if isPrimary}}btn-primary{{/if}}
                            {{#if isSecondary}}btn-secondary{{/if}}
                            btn-sm mb-1" href="#">{{text}}</button>
                            {{/each}}
                        </div>
                        <ul class="mt-3">

                            {{#each characteristics}}
                            <li>
                                {{title}}
                                {{value}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>


            </div>
            {{/each}}

        </div>


    </div>

    <div class="row m-4">
        <div class="card text-bg-success text-center">
            {{#with service}}
            <div class="card-body ">
                <h2>{{title}}</h2>

                <p>{{description}}</p>
                {{#each buttons}}
                <button type="button" class="btn btn-primary" href="#">{{text}}</button>

                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>

    <hr class="m-4">
    <footer>
        <ul class="nav ">
            {{#each footer}}
            <li class="nav-item col-2 ms-2">
                {{#each this}}
                <a class="nav-link active {{#if @last}}disabled{{/if}}" aria-current="page" href="#">{{text}}</a>
                {{/each}}
            </li>
            {{/each}}
        </ul>
    </footer>









</main>