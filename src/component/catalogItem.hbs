<div class="col-6">

                <div class="card ">

                    <img class="card-img-top" src="https://picsum.photos/400/200">
                    <div class="card-body">

                        {{#if isHot}}
                        <span class="badge text-bg-warning roundet-pill">Hot</span>{{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-primary roundet-pill">New</span>{{/if}}

                        {{#if isFast}}
                        <span class="badge text-bg-primary roundet-pill">Fast</span>{{/if}}

                        {{#if isFree}}
                        <span class="badge text-bg-primary roundet-pill">Free</span>{{/if}}

                        <h6 class="m-2">{{name}}</h6>


                        {{#with review}}
                        <p class="ms-1">{{amount}} {{text}}</p>
                        {{/with}}

                        <p class="ms-1">{{price}}
                        <p class="ms-1">{{delivery}}</p>
                        </p>

                        <div class="col-6">
                            {{#each buttons}}

                            <button class="btn {{#if isPrimary}}btn-primary{{/if}}
                            {{#if isSecondary}}btn-secondary{{/if}}
                            btn-sm mb-1" href="#">{{text}}</button>
                            {{/each}}
                        </div>
                        <ul class="mt-3">

                            {{#each characteristics}}
                            <li>
                                {{title}}
                                {{value}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>


            </div>